<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center">

            <com.lypeer.googleioclock.GoogleClock
                android:id="@+id/gclock"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="@dimen/defaultpadding"
                android:layout_weight="0"
                app:lyTheme="@style/LyTheme2"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.github.matteobattilana.weather.WeatherView
                    android:id="@+id/weather_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <io.armcha.elasticview.ElasticView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/paddingcardshor"
                    android:layout_marginRight="@dimen/paddingcardshor"
                    android:layout_marginTop="@dimen/paddingcardsver"
                    android:layout_marginBottom="@dimen/paddingcardsver"
                    app:flexibility="8"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="5dp"
                    app:cardForegroundColor="#4007575B"
                    app:contentPadding="@dimen/defaultpaddinglarge"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/cityName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/open_sans_light"
                            android:textSize="22sp"
                            android:text="balblabalbalblab"
                            android:textColor="@color/colorText"
                            android:gravity="center"
                            android:layout_gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/open_sans_light"
                            android:paddingTop="5dp"
                            android:text="balblabalbalblab"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/colorText"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cityName"/>
                        <TextView
                            android:paddingTop="5dp"
                            android:id="@+id/pressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_light"
                            android:text="balblabalbalblab"
                            android:textColor="@color/colorText"
                            android:gravity="center"
                            android:layout_gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/temp"
                            android:background="@android:color/transparent"/>
                        <TextView
                            android:paddingTop="5dp"
                            android:id="@+id/humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_light"
                            android:text="balblabalbalblab"
                            android:textColor="@color/colorText"
                            android:gravity="center"
                            android:layout_gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/pressure"
                            android:background="@android:color/transparent"/>

                        <ImageView
                            android:paddingStart="@dimen/defaultpaddinglarge"
                            android:paddingEnd="@dimen/defaultpaddinglarge"
                            android:background="@android:color/transparent"
                            android:id="@+id/imageClimate"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:layout_constraintStart_toEndOf="@id/temp"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </io.armcha.elasticview.ElasticView>
            </FrameLayout>
        </TableRow>

        <fragment
            android:id="@+id/fragment"
            android:name="com.icar.launcher.fragments.ListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>